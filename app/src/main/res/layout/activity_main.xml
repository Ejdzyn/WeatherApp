<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connectView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:gravity="center"
            android:padding="4px"
            android:background="#E8A41A"
            android:text="CONNECTION LOST"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"

            android:background="@drawable/weather"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/myText"
                android:digits="aąbcćdeęfghijklmnoópqrsśtuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_insert_city"
                android:ems="10"
                android:hint="City"
                android:layout_marginBottom="32dp"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColorHighlight="#000000"
                android:textColorLink="#000000"
                android:textCursorDrawable="@null" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f3a3b5"
                android:layout_marginTop="32dp"
                android:onClick="sendText"
                android:text="Check the weather" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>